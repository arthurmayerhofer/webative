<!-- JavaScript para alterar o background da barra de navegação ao rolar a página -->
<script>
    window.addEventListener('scroll', function () {
        var navbar = document.querySelector('.navbar');
        var scrollPosition = window.scrollY;

        // Calcula a intensidade da mudança de cor com base na posição de rolagem
        var intensity = scrollPosition / (0.3 * window.innerHeight); // Ajuste o valor 0.5 conforme necessário

        // Limita a intensidade entre 0 e 1
        intensity = Math.min(1, Math.max(0, intensity));

        // Calcula a opacidade com base na intensidade
        var opacity = intensity * 0.7; // Ajuste o valor 0.6 conforme necessário

        // Calcula a cor de fundo com base na opacidade
        var backgroundColor = 'rgba(0, 0, 0, ' + opacity + ')';

        // Aplica a cor de fundo à barra de navegação
        navbar.style.background = backgroundColor;
    });
</script>


